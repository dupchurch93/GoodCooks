extends layout.pug
include utils.pug

block content
  +validationErrorSummary(errors)
  form(class='registration-form', action='/users/register', method='post')
    input(type='hidden', name= '_csrf', value=csrfToken)
    +field('User Name', 'username', user.username)
    +field('Email Address', 'email', user.email)
    +field('Password', 'password', user.password, 'password')
    +field('Confirm Password', 'confirmPassword', '', 'password')
    div
      button(type='submit') Register
    div
      p: a(href='/users/login') Already have an account? Login!
    div
      p: a(href='/') Return Home
